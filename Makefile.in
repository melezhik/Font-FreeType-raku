SRC=src

all : lib

# 'all', with compilation warnings and debug symbols enabled
debug :
	%MAKE% "CF=-Wall -g"  all

lib : resources/libraries/%LIB-NAME%

resources/libraries/%LIB-NAME% : $(SRC)/ft6_outline%O% $(SRC)/ft6_glyph%O% $(SRC)/ft6_glyphslot%O%
	%LD% %LDSHARED% %LDFLAGS% %LDOUT%resources/libraries/%LIB-NAME% $(SRC)/ft6_outline%O% $(SRC)/ft6_glyph%O% $(SRC)/ft6_glyphslot%O% %LIB-LDFLAGS% $(CF)

$(SRC)/ft6_outline%O% : $(SRC)/ft6_outline.c $(SRC)/ft6_outline.h
	%CC% -I $(SRC) -c %CCSHARED% %CCFLAGS% %CCOUT%$(SRC)/ft6_outline%O% $(SRC)/ft6_outline.c %LIB-CFLAGS% $(CF)

$(SRC)/ft6_glyph%O% : $(SRC)/ft6_glyph.c $(SRC)/ft6_glyph.h
	%CC% -I $(SRC) -c %CCSHARED% %CCFLAGS% %CCOUT%$(SRC)/ft6_glyph%O% $(SRC)/ft6_glyph.c %LIB-CFLAGS% $(CF)

$(SRC)/ft6_glyphslot%O% : $(SRC)/ft6_glyphslot.c $(SRC)/ft6_glyphslot.h
	%CC% -I $(SRC) -c %CCSHARED% %CCFLAGS% %CCOUT%$(SRC)/ft6_glyphslot%O% $(SRC)/ft6_glyphslot.c %LIB-CFLAGS% $(CF)

doc : docs/index.md docs/BitMap.md docs/CharMap.md docs/Face.md docs/Glyph.md docs/GlyphImage.md docs/Outline.md docs/NamedInfo.md docs/Raw.md docs/Raw/Defs.md

docs/index.md : lib/Font/FreeType.rakumod
	(\
	    echo '[![Build Status](https://travis-ci.org/p6-pdf/Font-FreeType-raku.svg?branch=master)](https://travis-ci.org/p6-pdf/Font-FreeType-raku)'; \
            echo '';\
            perl6 -I . --doc=Markdown $< \
	    | raku -p -n etc/resolve-links.raku \
        ) > $@

docs/%.md : lib/Font/FreeType/%.rakumod
	raku -I . --doc=Markdown $< \
	| raku -p -n etc/resolve-links.raku \
        > $@

docs/BitMap.md : lib/Font/FreeType/BitMap.rakumod

docs/CharMap.md : lib/Font/FreeType/CharMap.rakumod

docs/Face.md : lib/Font/FreeType/Face.rakumod

docs/Glyph.md : lib/Font/FreeType/Glyph.rakumod

docs/GlyphImage.md : lib/Font/FreeType/GlyphImage.rakumod

docs/NamedInfo.md : lib/Font/FreeType/NamedInfo.rakumod

docs/Outline.md : lib/Font/FreeType/Outline.rakumod

docs/Raw.md : lib/Font/FreeType/Raw.rakumod

docs/Raw/Defs.md : lib/Font/FreeType/Raw/Defs.rakumod

test : all
	@prove -e"raku -I ." t

loudtest : all
	@prove -e"raku -I ." -v t

clean :
	@rm -f $(SRC)/ft6_*%O% resources/libraries/*%LIB-NAME%

realclean : clean
	@rm -f Makefile README.md docs/*.md docs/*/*.md


