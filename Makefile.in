SRC=src

all : lib

# 'all', with compilation warnings and debug symbols enabled
debug :
	%MAKE% "CF=-Wall -g"  all

lib : resources/libraries/%LIB-NAME%

resources/libraries/%LIB-NAME% : $(SRC)/ft6_outline%O% $(SRC)/ft6_glyph%O% $(SRC)/ft6_glyphslot%O%
	%LD% %LDSHARED% %LDFLAGS% %LDOUT%resources/libraries/%LIB-NAME% $(SRC)/ft6_outline%O% $(SRC)/ft6_glyph%O% $(SRC)/ft6_glyphslot%O% %LIB-LDFLAGS% $(CF)

$(SRC)/ft6_outline%O% : $(SRC)/ft6_outline.c $(SRC)/ft6_outline.h
	%CC% -I $(SRC) -c %CCSHARED% %CCFLAGS% %CCOUT%$(SRC)/ft6_outline%O% $(SRC)/ft6_outline.c %LIB-CFLAGS% $(CF)

$(SRC)/ft6_glyph%O% : $(SRC)/ft6_glyph.c $(SRC)/ft6_glyph.h
	%CC% -I $(SRC) -c %CCSHARED% %CCFLAGS% %CCOUT%$(SRC)/ft6_glyph%O% $(SRC)/ft6_glyph.c %LIB-CFLAGS% $(CF)

$(SRC)/ft6_glyphslot%O% : $(SRC)/ft6_glyphslot.c $(SRC)/ft6_glyphslot.h
	%CC% -I $(SRC) -c %CCSHARED% %CCFLAGS% %CCOUT%$(SRC)/ft6_glyphslot%O% $(SRC)/ft6_glyphslot.c %LIB-CFLAGS% $(CF)

# NB README.pm is built by mi6
doc : lib/Font/FreeType/BitMap.md lib/Font/FreeType/CharMap.md lib/Font/FreeType/Face.md lib/Font/FreeType/Glyph.md lib/Font/FreeType/GlyphImage.md lib/Font/FreeType/Outline.md lib/Font/FreeType/NamedInfo.md lib/Font/FreeType/Native.md lib/Font/FreeType/Native/Types.md

lib/Font/FreeType/BitMap.md : lib/Font/FreeType/BitMap.pm
	perl6 -I . --doc=Markdown lib/Font/FreeType/BitMap.pm > lib/Font/FreeType/BitMap.md

lib/Font/FreeType/CharMap.md : lib/Font/FreeType/CharMap.pm
	perl6 -I . --doc=Markdown lib/Font/FreeType/CharMap.pm > lib/Font/FreeType/CharMap.md

lib/Font/FreeType/Face.md : lib/Font/FreeType/Face.pm
	perl6 -I . --doc=Markdown lib/Font/FreeType/Face.pm > lib/Font/FreeType/Face.md

lib/Font/FreeType/Glyph.md : lib/Font/FreeType/Glyph.pm
	perl6 -I . --doc=Markdown lib/Font/FreeType/Glyph.pm > lib/Font/FreeType/Glyph.md

lib/Font/FreeType/GlyphImage.md : lib/Font/FreeType/GlyphImage.pm
	perl6 -I . --doc=Markdown lib/Font/FreeType/GlyphImage.pm > lib/Font/FreeType/GlyphImage.md

lib/Font/FreeType/NamedInfo.md : lib/Font/FreeType/NamedInfo.pm
	perl6 -I . --doc=Markdown lib/Font/FreeType/NamedInfo.pm > lib/Font/FreeType/NamedInfo.md

lib/Font/FreeType/Outline.md : lib/Font/FreeType/Outline.pm
	perl6 -I . --doc=Markdown lib/Font/FreeType/Outline.pm > lib/Font/FreeType/Outline.md

lib/Font/FreeType/Native.md : lib/Font/FreeType/Native.pm
	perl6 -I . --doc=Markdown lib/Font/FreeType/Native.pm > lib/Font/FreeType/Native.md

lib/Font/FreeType/Native/Types.md : lib/Font/FreeType/Native/Types.pm
	perl6 -I . --doc=Markdown lib/Font/FreeType/Native/Types.pm > lib/Font/FreeType/Native/Types.md

test : all
	@prove -e"perl6 -I ." -v t

clean :
	@rm -f $(SRC)/ft6_*%O% resources/libraries/*%LIB-NAME%

realclean : clean
	@rm -f Makefile


